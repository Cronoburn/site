<li class="media">
<div class="panel panel-default">
    <div class="panel-heading">
        <img src="{{ app.request.basepath }}/img/avatar.jpg" class="media-object pull-left img-circle" />
        <h3 class="panel-title">&nbsp;{{ post.title }}
            <small class="pull-right">{{ post.date }}</small>
        </h3>
    </div>
    <div class="panel-body">
        {{ post.content }}
    </div>
    <div class="panel-footer">
        &nbsp;<small class="pull-right">by: <a href="http://plus.google.com/+EricGeorge" rel="author">{{ post.user }}</a></small>
    </div>
</div>
</li>